" no vi compatibility
set nocompatible

" filetype func off
filetype off 

set autoindent
set expandtab
set softtabstop =4
set shiftwidth =4
set shiftround

set backspace =indent,eol,start
set hidden
set laststatus =2

" Set linenumbers
set number
" initialize vundle
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()
" All the plugins are listed here
Plugin 'VundleVim/Vundle.vim'
Plugin 'altercation/vim-colors-solarized'
Plugin 'lervag/vimtex'

" start all the plugins above
call vundle#end()

" filetype func on
filetype plugin indent on

" Solarized dark
syntax enable
set background=dark
colorscheme solarized


