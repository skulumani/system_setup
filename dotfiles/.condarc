# Condarc file

channels:
  - anaconda-fusion
  - menpo
  - anaconda

# show channel URLs during downloads or conda list
show_channel_urls: true

# don't change the command prompt when switching enviornments
changeps1: false

# ensure pip is always installed by conda
add_pip_as_python_dependency: true
use_pip: true

# avoid updating installed dependencies
update_dependencies: true
ssl_verify: true
